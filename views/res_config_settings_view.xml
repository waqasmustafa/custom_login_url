<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_custom_login_url" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.custom.login.url</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//block[@id='user_default_rights']" position="before">
        <block title="Custom Login URL" id="custom_login_url_setting_block">
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 mb-3">
              <label for="custom_login_enabled" class="me-2">
                Hide Default /web &amp; /web/login
              </label>
              <field name="custom_login_enabled"/>
              <div class="text-muted">
                Hide default <code>/web</code> and <code>/web/login</code> for public users. Use a private custom login path instead.
              </div>
            </div>

            <div class="col-12 col-lg-6 mb-3">
              <label for="custom_login_slug" class="me-2">
                Custom Login Path (slug)
              </label>
              <div class="d-flex align-items-center" style="gap:6px;">
                <field name="custom_login_base_url" readonly="1" class="oe_inline"/>
                <field name="custom_login_slug" placeholder="Enter your custom path (e.g., vault)" class="oe_inline"/>
              </div>
              <div class="text-muted">
                Example: <code>vault</code> â†’ <code>https://yourdomain.com/vault</code><br/>
                Changes apply instantly via redirect; no restart required.
              </div>
            </div>

            <div class="col-12 col-lg-6 mb-3">
              <label for="custom_login_block_mode" class="me-2">
                Block Mode for /web &amp; /web/login
              </label>
              <field name="custom_login_block_mode"/>
              <div class="text-muted">
                Choose how to block public access to <code>/web</code> and <code>/web/login</code>.
              </div>
            </div>

            <div class="col-12 col-lg-6 mb-3">
              <label for="custom_login_preview_url" class="me-2">
                Login URL Preview
              </label>
              <field name="custom_login_preview_url" readonly="1"/>
              <div class="text-muted">Full login URL preview</div>
            </div>
          </div>
        </block>
      </xpath>
    </field>
  </record>
</odoo>
